<UserControl
    x:Class="EVO_PV.Views.UCOrderListEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cmd="http://www.galasoft.ch/mvvmlight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:EVO_PV.Utilities"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UserControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Focusable="True"
    KeyDown="UserControl_KeyDown"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/EVO_PV;Component/Resources/Dictionaries/DictTags.xaml" />
                <ResourceDictionary Source="/EVO_PV;Component/Resources/Style/style.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <CollectionViewSource x:Key="StatesArticle" Source="{Binding Path=StatesArticle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <CollectionViewSource x:Key="Packages" Source="{Binding Path=Packages, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <BooleanToVisibilityConverter x:Key="VisibilityConverterBool" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#eee">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Visibility="{Binding Path=IsOnDuplyState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}">
            <Button
                Grid.Row="0"
                Width="150"
                Margin="0,0,40,0"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="#00BCD4"
                BorderBrush="#00BCD4"
                Command="{Binding Path=ViewDetails}"
                Style="{StaticResource MaterialDesignRaisedDarkButton}">
                <Grid Width="150" HorizontalAlignment="Center">
                    <materialDesign:PackIcon
                        Margin="10,2,0,0"
                        Foreground="#FFFFFF"
                        Kind="ChevronLeft" />
                    <TextBlock HorizontalAlignment="Center" Text="REGRESAR" />
                </Grid>
            </Button>
        </StackPanel>
        <StackPanel Visibility="{Binding Path=IsNotDuplyState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}">
            <Button
                Grid.Row="0"
                Width="150"
                Margin="0,0,40,0"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="#00BCD4"
                BorderBrush="#00BCD4"
                Command="{Binding Path=ViewDetails}"
                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                Visibility="{Binding Path=IsNotCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}">
                <Grid Width="150" HorizontalAlignment="Center">
                    <materialDesign:PackIcon
                        Margin="10,2,0,0"
                        Foreground="#FFFFFF"
                        Kind="ChevronLeft" />
                    <TextBlock HorizontalAlignment="Center" Text="REGRESAR" />
                </Grid>
            </Button>
            <Button
                Grid.Row="0"
                Width="150"
                Margin="0,0,40,0"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="#00BCD4"
                BorderBrush="#00BCD4"
                Command="{Binding Path=ViewDetailsCraft}"
                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                Visibility="{Binding Path=IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}">
                <Grid Width="150" HorizontalAlignment="Center">
                    <materialDesign:PackIcon
                        Margin="10,2,0,0"
                        Foreground="#FFFFFF"
                        Kind="ChevronLeft" />
                    <TextBlock HorizontalAlignment="Center" Text="REGRESAR" />
                </Grid>
            </Button>
        </StackPanel>


        <Grid Grid.Row="1" Width="Auto">
            <materialDesign:Card Grid.Row="1" Margin="30,0,30,10">
                <Grid Style="{StaticResource ContentCard}">
                    <StackPanel>

                        <StackPanel>
                            <Grid Margin="0,10,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource HeaderView}">
                                    <TextBlock Style="{StaticResource TextHeaderView}" Text="{DynamicResource lblDateRequest}" />
                                    <TextBlock Style="{StaticResource DateCreation}" Text="{Binding UpdateSourceTrigger=PropertyChanged, StringFormat='dd/MM/yyyy', Path=DateOrder, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" />
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource HeaderView}">
                                    <TextBlock Style="{StaticResource TextHeaderView}" Text="{DynamicResource lblDateDelivery}" />
                                    <TextBlock
                                        Style="{StaticResource DateCreation}"
                                        Text="{Binding UpdateSourceTrigger=PropertyChanged, StringFormat='dd/MM/yyyy', Path=DateDelivery, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}"
                                        Visibility="{Binding Path=IsNotCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}" />

                                    <DatePicker
                                        Name="dpDateDelivery"
                                        Width="110"
                                        Margin="10,-4,-1,0"
                                        VerticalAlignment="Bottom"
                                        Background="#FFECECEC"
                                        DisplayDateStart="{Binding Path=DateOrder, Mode=TwoWay}"
                                        Focusable="False"
                                        IsDropDownOpen="{Binding Path=Open}"
                                        IsTodayHighlighted="False"
                                        Language="ES-mx"
                                        SelectedDate="{Binding Path=DateDelivery, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=LostFocus}"
                                        Visibility="{Binding Path=IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}">
                                        <DatePicker.Resources>
                                            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#FF9800" />
                                            <SolidColorBrush x:Key="MaterialDesignBody" Color="Black" />
                                        </DatePicker.Resources>
                                    </DatePicker>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Style="{StaticResource HeaderView}">
                                    <TextBlock Style="{StaticResource TextHeaderView}" Text="{DynamicResource lblRequestFor}" />
                                    <TextBlock
                                        Style="{StaticResource DateCreation}"
                                        Text="Área de Compras"
                                        Visibility="{Binding Path=IsPurchaseOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}" />
                                    <ComboBox
                                        x:Name="cbPlantas"
                                        DisplayMemberPath="WhsName"
                                        IsEnabled="False"
                                        ItemsSource="{Binding Path=Factories}"
                                        SelectedValue="{Binding Path=FactoryCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedValuePath="WhsCode"
                                        Style="{StaticResource ComboBoxStyle}"
                                        Visibility="{Binding Path=IsNotPurchaseOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <StackPanel.Resources>
                                <FrameworkElement x:Key="ProxyElement" DataContext="{Binding}" />
                            </StackPanel.Resources>
                            <ContentControl Content="{StaticResource ProxyElement}" Visibility="Collapsed" />
                            <DataGrid
                                x:Name="dgOrderArticlesHide"
                                Grid.RowSpan="2"
                                Grid.ColumnSpan="4"
                                Width="1020"
                                MaxHeight="320"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CanUserReorderColumns="False"
                                CanUserResizeColumns="True"
                                GotFocus="dgOrderArticles_GotFocus"
                                ItemsSource="{Binding ArticlesOrder}"
                                ScrollViewer.CanContentScroll="True"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                SelectedItem="{Binding ArticleOrderSelected}"
                                SelectionMode="Single"
                                SelectionUnit="FullRow"
                                Visibility="{Binding Path=IsNotCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}">
                                <DataGrid.Resources>
                                    <ResourceDictionary>
                                        <local:DecimalConverter x:Key="decimalConverter" />
                                        <BooleanToVisibilityConverter x:Key="VisibilityConverterBool" />
                                    </ResourceDictionary>
                                </DataGrid.Resources>
                                <DataGrid.ItemContainerStyle>
                                    <Style TargetType="{x:Type DataGridRow}">
                                        <Setter Property="Background" Value="{Binding Path=ErrorArticle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <Setter Property="Margin" Value="0,0,0,0" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                </DataGrid.ItemContainerStyle>

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="Height" Value="80" />
                                        <Setter Property="BorderBrush" Value="White" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Margin" Value="0,0,0,50" />
                                        <Setter Property="Foreground" Value="#7F0E06" />
                                        <Setter Property="VerticalContentAlignment" Value="Bottom" />
                                        <Setter Property="FontWeight" Value="DemiBold" />
                                        <Style.Resources>
                                            <!--  Reset the Button style inside the DatePicker to default values  -->
                                            <Style TargetType="{x:Type TextBox}">
                                                <Setter Property="Foreground" Value="Black" />
                                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                <Setter Property="BorderBrush" Value="Black" />
                                                <Setter Property="Padding" Value="5" />
                                                <Setter Property="Margin" Value="0,10,0,0" />
                                                <Setter Property="FontWeight" Value="Normal" />
                                            </Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Foreground" Value="Black" />
                                                <Setter Property="Padding" Value="5" />
                                                <Setter Property="Margin" Value="0,10,0,0" />
                                                <Setter Property="VerticalAlignment" Value="Top" />
                                                <Setter Property="FontWeight" Value="Normal" />
                                            </Style>
                                        </Style.Resources>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.RowStyle>
                                    <Style TargetType="{x:Type DataGridRow}">
                                        <Setter Property="Height" Value="Auto" />
                                        <Setter Property="Background" Value="{Binding Path=ErrorArticle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <Setter Property="Margin" Value="0,0,0,0" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>

                                    <DataGridTextColumn
                                        Width="26*"
                                        Binding="{Binding Path=CodeArticle}"
                                        Header="Código Artículo"
                                        IsReadOnly="True">
                                        <DataGridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTextColumn.HeaderTemplate>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn
                                        Width="40*"
                                        Binding="{Binding Path=NameArticle}"
                                        Header="Nombre"
                                        IsReadOnly="True">
                                        <DataGridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTextColumn.HeaderTemplate>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Width="25*" Header="Cantidad">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBox
                                                        PreviewKeyDown="TextBox_PreviewKeyDown"
                                                        PreviewTextInput="TextBox_PreviewTextInput"
                                                        Text="{Binding Path=Quantity, StringFormat={}{0:n2}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource decimalConverter}}"
                                                        TextAlignment="Right" />
                                                </StackPanel>
                                            </DataTemplate>

                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridComboBoxColumn
                                        Width="25*"
                                        DisplayMemberPath="Name"
                                        Header="Estado"
                                        SelectedValueBinding="{Binding Path=StateArticleId, Mode=TwoWay}"
                                        SelectedValuePath="StateArticleId"
                                        Visibility="{Binding DataContext.IsNotPurchaseOrder, Source={StaticResource ProxyElement}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <DataGridComboBoxColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridComboBoxColumn.HeaderTemplate>
                                        <DataGridComboBoxColumn.ElementStyle>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.StatesArticle}" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridComboBoxColumn.ElementStyle>
                                        <DataGridComboBoxColumn.EditingElementStyle>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.StatesArticle}" />
                                            </Style>
                                        </DataGridComboBoxColumn.EditingElementStyle>
                                    </DataGridComboBoxColumn>
                                    <DataGridComboBoxColumn
                                        Width="25*"
                                        DisplayMemberPath="PackageName"
                                        Header="Empaque"
                                        SelectedValueBinding="{Binding Path=PackageId, Mode=TwoWay}"
                                        SelectedValuePath="PackageId"
                                        Visibility="{Binding DataContext.IsNotPurchaseOrder, Source={StaticResource ProxyElement}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <DataGridComboBoxColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridComboBoxColumn.HeaderTemplate>
                                        <DataGridComboBoxColumn.ElementStyle>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.Packages}" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridComboBoxColumn.ElementStyle>
                                        <DataGridComboBoxColumn.EditingElementStyle>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.Packages}" />
                                            </Style>
                                        </DataGridComboBoxColumn.EditingElementStyle>
                                    </DataGridComboBoxColumn>

                                    <DataGridTextColumn
                                        Width="25*"
                                        Binding="{Binding Path=UnitMeasure}"
                                        Header="Unidad de Medida"
                                        IsReadOnly="True">
                                        <DataGridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTextColumn.HeaderTemplate>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn
                                        Width="25*"
                                        Binding="{Binding Path=SuggestedOrder, Converter={StaticResource decimalConverter}}"
                                        Header="Pedido Sugerido"
                                        IsReadOnly="True">
                                        <DataGridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTextColumn.HeaderTemplate>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn
                                        Width="25*"
                                        Binding="{Binding Path=Stock, Converter={StaticResource decimalConverter}}"
                                        Header="Stock"
                                        IsReadOnly="True">
                                        <DataGridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTextColumn.HeaderTemplate>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn
                                        Width="25*"
                                        Binding="{Binding Path=Minimum, Converter={StaticResource decimalConverter}}"
                                        Header="Mínimo"
                                        IsReadOnly="True">
                                        <DataGridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTextColumn.HeaderTemplate>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn
                                        Width="25*"
                                        Binding="{Binding Path=Maximum, Converter={StaticResource decimalConverter}}"
                                        Header="Máximo"
                                        IsReadOnly="True">
                                        <DataGridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTextColumn.HeaderTemplate>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Width="30*" Header="Observaciones">

                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextWrapping="Wrap" />                                                
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <Grid
                                                        Height="41"
                                                        MaxWidth="60"
                                                        MaxHeight="41"
                                                        HorizontalAlignment="Left"
                                                        ToolTip="{Binding Observations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                        <TextBlock Text="{Binding Observations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap">
                                                            <TextBlock.Style>
                                                                <Style TargetType="{x:Type TextBlock}">
                                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                                    <Setter Property="FontSize" Value="11" />
                                                                    <Setter Property="Foreground" Value="#000" />
                                                                </Style>
                                                            </TextBlock.Style>
                                                            <TextBlock.ToolTip>
                                                                <ToolTip DataContext="{Binding RelativeSource={RelativeSource Self}, Path=PlacementTarget.Parent}" Style="{StaticResource CustomToolTip}">
                                                                    <TextBlock Text="{Binding Path=ToolTip}">
                                                                        <TextBlock.Style>
                                                                            <Style TargetType="{x:Type TextBlock}">
                                                                                <Setter Property="TextWrapping" Value="Wrap" />
                                                                                <Setter Property="Height" Value="Auto" />
                                                                                <Setter Property="FontSize" Value="15" />
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
                                                                </ToolTip>
                                                            </TextBlock.ToolTip>

                                                        </TextBlock>
                                                    </Grid>
                                                    <Button
                                                        Width="20"
                                                        Height="20"
                                                        Margin="-10,-20,-10,0"
                                                        Padding="0"
                                                        HorizontalAlignment="Right"
                                                        Background="#FF9800"
                                                        BorderBrush="#FF9800"
                                                        Command="{Binding Path=DataContext.CmdOpenEditObservationItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                                        CommandParameter="{Binding Path=.}">
                                                        <materialDesign:PackIcon HorizontalAlignment="Center" Kind="Edit" />
                                                    </Button>
                                                    <Popup
                                                        x:Name="InfoPopup"
                                                        AllowsTransparency="True"
                                                        IsOpen="{Binding IsPopObservationOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Placement="Bottom"
                                                        StaysOpen="False">
                                                        <Border
                                                            x:Name="InfoPopupBorder"
                                                            Width="200"
                                                            Height="100"
                                                            Panel.ZIndex="10"
                                                            Background="White"
                                                            BorderBrush="LightGray"
                                                            BorderThickness="1"
                                                            CornerRadius="5">
                                                            <Border.Effect>
                                                                <DropShadowEffect
                                                                    BlurRadius="10"
                                                                    Direction="270"
                                                                    Opacity="0.5"
                                                                    ShadowDepth="7" />
                                                            </Border.Effect>
                                                            <TextBox
                                                                x:Name="TextAreaPopup"
                                                                AcceptsReturn="True"
                                                                Background="White"
                                                                Text="{Binding Observations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                TextWrapping="Wrap"
                                                                VerticalScrollBarVisibility="Visible" />
                                                        </Border>
                                                    </Popup>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="25*" Visibility="{Binding DataContext.IsCraftOrder, Source={StaticResource ProxyElement}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock
                                                        Margin="20,0,0,5"
                                                        Text="Agregar"
                                                        TextWrapping="Wrap"
                                                        Visibility="{Binding Path=DataContext.IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}" />
                                                    <Button
                                                        Width="30"
                                                        Height="30"
                                                        Margin="25,0,5,0"
                                                        Padding="0"
                                                        HorizontalAlignment="Center"
                                                        HorizontalContentAlignment="Center"
                                                        Background="#4CAF50"
                                                        BorderBrush="#4ACF50"
                                                        BorderThickness="13"
                                                        Command="{Binding Path=DataContext.ValidateFindArticleCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                                        Visibility="{Binding Path=DataContext.IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}">
                                                        <materialDesign:PackIcon HorizontalAlignment="Center" Kind="Add" />
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <Button
                                                        Width="30"
                                                        Height="30"
                                                        Margin="5,0,5,0"
                                                        Padding="0"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Background="Red"
                                                        BorderBrush="Red"
                                                        BorderThickness="13"
                                                        Command="{Binding Path=DataContext.DeleteArticleOrderCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                                        Visibility="{Binding Path=DataContext.IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}">
                                                        <materialDesign:PackIcon HorizontalAlignment="Center" Kind="Trash" />
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                </DataGrid.Columns>
                            </DataGrid>
                            <DataGrid
                                x:Name="dgOrderArticles"
                                Grid.RowSpan="2"
                                Grid.ColumnSpan="4"
                                Width="1020"
                                MaxHeight="320"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
