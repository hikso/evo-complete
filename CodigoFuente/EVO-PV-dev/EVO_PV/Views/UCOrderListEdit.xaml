                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="25*" Visibility="{Binding DataContext.IsCraftOrder, Source={StaticResource ProxyElement}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock
                                                        Margin="20,0,0,5"
                                                        Text="Agregar"
                                                        TextWrapping="Wrap"
                                                        Visibility="{Binding Path=DataContext.IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}" />
                                                    <Button
                                                        Width="30"
                                                        Height="30"
                                                        Margin="25,0,5,0"
                                                        Padding="0"
                                                        HorizontalAlignment="Center"
                                                        HorizontalContentAlignment="Center"
                                                        Background="#4CAF50"
                                                        BorderBrush="#4ACF50"
                                                        BorderThickness="13"
                                                        Command="{Binding Path=DataContext.ValidateFindArticleCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                                        Visibility="{Binding Path=DataContext.IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}">
                                                        <materialDesign:PackIcon HorizontalAlignment="Center" Kind="Add" />
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <Button
                                                        Width="30"
                                                        Height="30"
                                                        Margin="5,0,5,0"
                                                        Padding="0"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Background="Red"
                                                        BorderBrush="Red"
                                                        BorderThickness="13"
                                                        Command="{Binding Path=DataContext.DeleteArticleOrderCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                                        Visibility="{Binding Path=DataContext.IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}">
                                                        <materialDesign:PackIcon HorizontalAlignment="Center" Kind="Trash" />
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                </DataGrid.Columns>
                            </DataGrid>

                        </StackPanel>

                        <StackPanel
                            Margin="0,20"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal">
                            <Button
                                x:Name="btnCleanPage"
                                Margin="0,0,5,0"
                                Background="Red"
                                BorderBrush="Red"
                                Command="{Binding DeleteArticlesOrderCommand}"
                                Content="Limpiar solicitud"
                                IsEnabled="{Binding EnableCleanOrder}"
                                Visibility="{Binding Path=IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}" />
                            <Button
                                x:Name="btnSelectArticles"
                                Margin="0,0,5,0"
                                Background="#00BCD4"
                                BorderBrush="#00BCD4"
                                Command="{Binding ShowModalArticlesCommand}"
                                Content="Agregar Artículos(F3)"
                                Visibility="{Binding Path=IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}" />
                            <Button
                                x:Name="btnSave"
                                Margin="0,0,5,0"
                                Background="#FF9800"
                                BorderBrush="#FF9800"
                                Command="{Binding ValidateOpenConfirmationCommand}"
                                Content="Guardar Borrador"
                                IsEnabled="{Binding EnableSavedAndSendOrder}"
                                Visibility="{Binding Path=IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}" />
                            <Button
                                x:Name="btnSend"
                                Margin="0,0,5,0"
                                Background="#4ACF50"
                                BorderBrush="#4ACF50"
                                Command="{Binding ValidateErasedConfirmationUpdateCommand}"
                                Content="Actualizar Documento"
                                IsEnabled="{Binding EnableSavedAndSendOrder}"
                                Visibility="{Binding Path=IsNotCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}" />
                            <Button
                                x:Name="btnEdit"
                                Margin="0,0,5,0"
                                Background="#4ACF50"
                                BorderBrush="#4ACF50"
                                Command="{Binding ValidateErasedConfirmationCommand}"
                                Content="Generar Documento"
                                IsEnabled="{Binding EnableSavedAndSendOrder}"
                                Visibility="{Binding Path=IsCraftOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConverterBool}}" />
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <Grid Style="{StaticResource IconCard}">
                <Grid.Effect>
                    <DropShadowEffect
                        BlurRadius="20"
                        RenderingBias="Quality"
                        ShadowDepth="1"
                        Color="#FFECECEC" />
                </Grid.Effect>
                <Border Style="{StaticResource BorderCard}" />
                <materialDesign:PackIcon
                    Width="30"
                    Height="30"
                    Margin="5"
                    Padding="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Kind="PlaylistAddCheck" />
            </Grid>

            <Grid Style="{StaticResource Title}">

                <StackPanel Style="{StaticResource ContentTitle}">
                    <TextBlock Style="{StaticResource TextTitle}" Text="{Binding OrderType.OrderTypeName, StringFormat='Solicitud de Pedido - Tipo: {0}'}" />
                </StackPanel>

            </Grid>
        </Grid>


    </Grid>

</UserControl>
